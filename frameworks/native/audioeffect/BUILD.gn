import("//build/ohos.gni")
import("../../../audio_ohcore.gni")
import("../../../config.gni")
import("../../../sensor.gni")

pulseaudio_dir = "//third_party/pulseaudio"
pulseaudio_build_path = "//third_party/pulseaudio/ohosbuild"

config("audio_effect_config") {
  include_dirs = [
    "include",
    "../audiostream/include",
    "../../../interfaces/inner_api/native/audiorenderer/include",
    "../../../interfaces/inner_api/native/audiocommon/include",
    "../../../interfaces/inner_api/native/audiomanager/include",
    "../../../services/audio_service/client/include",
    "../../../services/audio_service/test/example",
    "$pulseaudio_dir/src",
    "$pulseaudio_dir/confgure/src",
  ]

  cflags = [
    "-Wall",
    "-Werror",
  ]

  if (sensor_enable == true) {
    cflags += [ "-DSENSOR_ENABLE" ]
  }
}

ohos_shared_library("audio_effect") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
    blocklist = "../../../cfi_blocklist.txt"
  }
  install_enable = true

  configs = [ ":audio_effect_config" ]

  # include_dirs = audio_gateway_include_dirs
  include_dirs = [ multimedia_audio_framework_pulse_audio ]

  sources = [
    "src/audio_effect_chain_manager.cpp",
    "src/audio_head_tracker.cpp",
  ]

  deps = [ "$pulseaudio_build_path/src/pulse:pulse" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_audio:effect_idl_headers",
    "drivers_interface_audio:libeffect_proxy_1.0",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]

  if (sensor_enable == true) {
    external_deps += [ "sensor:sensor_interface_native" ]
  }

  version_script = "../../../audio_framework.versionscript"

  part_name = "audio_framework"
  subsystem_name = "multimedia"
}
