import("//build/ohos.gni")
import("../../../../config.gni")

ohos_shared_library("audio_device_manager") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
    blocklist = "../../../../cfi_blocklist.txt"
  }
  install_enable = true

  cflags = [ "-fPIC" ]
  cflags += [ "-Wall" ]
  cflags_cc = cflags

  include_dirs = [
    "include",
    "interface",
    "../../audioutils/include",
    "../../../../interfaces/inner_api/native/audiocommon/include",
  ]

  include_dirs += [ multimedia_audio_framework_drivers ]

  sources = [
    "src/audio_device_adapter_impl.cpp",
    "src/audio_device_manager_impl.cpp",
  ]

  deps = [ "../../audioutils:audio_utils" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_audio:audio_idl_headers",
    "drivers_interface_audio:libaudio_proxy_2.0",
    "hilog:libhilog",
  ]

  defines = []
  if (audio_framework_feature_daudio_enable) {
    defines += [ "FEATURE_DISTRIBUTE_AUDIO" ]
    external_deps += [ "distributed_audio:daudio_client" ]
  }

  part_name = "audio_framework"
  subsystem_name = "multimedia"
}
