import("//build/config/features.gni")
import("//build/test.gni")
import("../../../../../../config.gni")

module_output_path = "audio_framework/audio_device_adapter_impl"

ohos_unittest("audio_device_adapter_impl_unit_test") {
  testonly = true
  module_out_path = module_output_path
  include_dirs = [
    "../../../devicemanager/include",
    "../../../devicemanager/interface",
    "include",
    "../../../../../../interfaces/inner_api/native/audiocommon/include",
  ]
  cflags = [
    "-Wall",
    "-Werror",
  ]
  cflags_cc = cflags
  cflags_cc += [ "-fno-access-control" ]
  sources = [
    "../../../../../../frameworks/native/hdiadapter/devicemanager/src/audio_device_adapter_impl.cpp",
    "src/audio_device_adapter_impl_unit_test.cpp",
  ]

  deps = [
    "../../../../audioutils:audio_utils",
    "../../../devicemanager:audio_device_manager",
  ]

  defines = []
  if (audio_framework_feature_distributed_audio) {
    defines += [ "FEATURE_DISTRIBUTE_AUDIO" ]
  }

  external_deps = [
    "bounds_checking_function:libsec_shared",
    "c_utils:utils",
    "drivers_interface_distributed_audio:libdaudio_proxy_1.0",
    "googletest:gmock",
    "googletest:gtest",
    "hdf_core:libhdf_utils",
    "hilog:libhilog",
  ]
}
