ohos_fuzztest("HpaeProresamplerProcessFuzzTest") {
  module_out_path = "audio_framework/audio_framework_route"
  fuzz_config_file = "../hpaeproresamplerprocess_fuzzer"

  include_dirs = [
    "../../../services/audio_engine/node/include",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-access-control",
    "-DENABLE_HIDUMP_DFX",
    "-DENABLE_HOOK_PCM",
  ]

  sources = [
    "hpae_proresampler_process_fuzzer.cpp",
  ]

  cflags_cc = [ "-std=c++20" ]

  configs = [
    "../../../services/audio_engine:audio_engine_node_config",
  ]

  deps = [
    "../../../frameworks/native/audioutils:audio_utils",
    "../../../services/audio_service:audio_common",
    "../../../frameworks/native/audioclock:audio_clock",
    "../../../services/audio_engine:audio_engine_manager",
    "../../../services/audio_engine:audio_engine_node",
    "../../../services/audio_engine:audio_engine_utils",
    "../../../services/audio_engine:audio_engine_plugins",
  ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]

  defines = []
}

group("fuzztest") {
  testonly = true
  deps = [ ":HpaeProresamplerProcessFuzzTest" ]
}
