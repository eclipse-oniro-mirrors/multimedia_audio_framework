  import("//build/test.gni")

ohos_fuzztest("HpaeDfxTreeFuzzTest") {
  module_out_path = "audio_framework/audio_framework_engine"
  fuzz_config_file = "../hpaedfxtree_fuzzer"

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-access-control",
  ]

  configs = [
    "../../../services/audio_policy:audio_policy_public_config",
    "../../../services/audio_engine:audio_engine_node_config",
  ]

  sources = [ "hpae_dfx_tree_fuzzer.cpp" ]

  deps = [
    "../../../frameworks/native/audioutils:audio_utils",
    "../../../services/audio_service:audio_common",
    "../../../services/audio_engine:audio_engine_utils",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}

group("fuzztest") {
  testonly = true
  deps = [ ":HpaeDfxTreeFuzzTest" ]
}
