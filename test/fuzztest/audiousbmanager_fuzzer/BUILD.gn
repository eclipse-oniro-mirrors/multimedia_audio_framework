audio_framework_root = "../../.."

ohos_fuzztest("AudioUsbManagerFuzzTest") {
  module_out_path = "audio_framework/audio_framework_route"
  fuzz_config_file = "../audiousbmanager_fuzzer"

  include_dirs = [
    "../../../services/audio_policy/server/domain/device/src/pnp",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-access-control",
  ]

  sources = [
    "audio_usb_manager_fuzzer.cpp",
  ]

  cflags_cc = [ "-std=c++20" ]

  deps = [
    "${audio_framework_root}/services/audio_service/idl:audio_framework_interface",
    "../../../services/audio_policy:audio_policy_service_static",
  ]
  external_deps = [
    "ability_runtime:wantagent_innerkits",
    "background_task_mgr:bgtaskmgr_innerkits",
    "bluetooth:btframework",
    "c_utils:utils",
    "data_share:datashare_common",
    "data_share:datashare_consumer",
    "drivers_interface_audio:libaudio_proxy_5.0",
    "googletest:gmock",
    "hdf_core:libhdf_host",
    "hdf_core:libhdf_ipc_adapter",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hdf_core:libpub_utils",
    "hilog:libhilog",
    "init:libbegetutil",
    "kv_store:distributeddata_inner",
    "media_foundation:media_monitor_client",
    "media_foundation:media_monitor_common",
    "os_account:os_account_innerkits",
    "power_manager:powermgr_client",
    "samgr:samgr_proxy",
  ]

  defines = []
}

group("fuzztest") {
  testonly = true
  deps = [ ":AudioUsbManagerFuzzTest" ]
}