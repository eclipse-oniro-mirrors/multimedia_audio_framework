import("//build/config/features.gni")
import("//build/test.gni")
import("../../../config.gni")

ohos_fuzztest("AudioPolicyClientFuzzTest") {
  module_out_path = "audio_framework/audio_framework_route"
  fuzz_config_file = "../audiopolicyclient_fuzzer"

  include_dirs = [
    "../../../services/audio_policy/client/stub/include",
    "../../../services/audio_policy/client/interface",
    "../../../services/audio_policy/server/proxy/include",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-access-control",
  ]

  sources = [ "audio_policy_client_proxy_fuzzer.cpp", ]

  configs = [ "../../../services/audio_service:audio_service_config" ]
  cflags_cc = [ "-std=c++20" ]

  deps = [
    "../../../services/audio_service/idl:audio_framework_interface",
    "../../../services/audio_policy:audio_policy_service_static",
  ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]
}

group("fuzztest") {
  testonly = true
  deps = [ ":AudioPolicyClientFuzzTest" ]
}
