import("//build/ohos.gni")
import("//build/test.gni")
import("../../../accessibility.gni")
import("../../../appgallery.gni")
import("../../../bluetooth_part.gni")
import("../../../config.gni")

audio_framework_root = "../../.."

ohos_fuzztest("AudioCollaborativeServiceFuzzTest") {
  module_out_path = "audio_framework/audio_framework_route"
  fuzz_config_file = "../audiocollaborativeservice_fuzzer"

  include_dirs = [
    "../../../services/audio_policy/server/domain/effect/include",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-access-control",
  ]

  sources = [
    "audio_collaborative_service_fuzzer.cpp",
  ]

  cflags_cc = [ "-std=c++20" ]

  deps = [
    "${audio_framework_root}/services/audio_service/idl:audio_framework_interface",
    "../../../services/audio_policy:audio_policy_service_static"
  ]
  external_deps = [
    "c_utils:utils",
    "data_share:datashare_consumer",
    "eventhandler:libeventhandler",
    "hilog:libhilog",
    "ipc:ipc_single",
    "kv_store:distributeddata_inner",
    "os_account:os_account_innerkits",
  ]

  defines = []

  if (bluetooth_part_enable == true) {
    external_deps += [ "bluetooth:btframework" ]
  }
}

group("fuzztest") {
  testonly = true
  deps = [ ":AudioCollaborativeServiceFuzzTest" ]
}